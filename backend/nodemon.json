{
  "watch": [
    "server.js",
    "app.js",
    "config/",
    "controllers/",
    "middleware/",
    "models/",
    "routes/",
    "services/",
    "utils/",
    "websocket/",
    "jobs/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "logs/",
    "coverage/",
    "tests/",
    ".git/",
    "public/uploads/"
  ],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "execMap": {
    "js": "node"
  },
  "verbose": false
}