{
  "info": {
    "name": "Contract Management System API",
    "description": "Complete Postman collection for Contract Management System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.token);",
                  "    pm.environment.set('userId', response.user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"SecurePassword123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"company\": \"Acme Corp\",\n  \"department\": \"Legal\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.token);",
                  "    pm.environment.set('refreshToken', response.refreshToken);",
                  "    pm.environment.set('userId', response.user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Enable 2FA",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/2fa/enable",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "2fa", "enable"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Contracts",
      "item": [
        {
          "name": "List Contracts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/contracts?page=1&limit=20&status=active",
              "host": ["{{baseUrl}}"],
              "path": ["contracts"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          }
        },
        {
          "name": "Create Contract",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('contractId', response.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Software Development Agreement\",\n  \"description\": \"Agreement for custom software development\",\n  \"type\": \"service\",\n  \"parties\": [\n    {\n      \"name\": \"Acme Corp\",\n      \"type\": \"company\",\n      \"email\": \"legal@acme.com\",\n      \"role\": \"client\"\n    },\n    {\n      \"name\": \"Tech Solutions Inc\",\n      \"type\": \"company\",\n      \"email\": \"contracts@techsolutions.com\",\n      \"role\": \"vendor\"\n    }\n  ],\n  \"value\": 50000,\n  \"currency\": \"USD\",\n  \"startDate\": \"2024-01-01\",\n  \"endDate\": \"2024-12-31\",\n  \"content\": \"This agreement is entered into...\",\n  \"tags\": [\"software\", \"development\", \"fixed-price\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contracts",
              "host": ["{{baseUrl}}"],
              "path": ["contracts"]
            }
          }
        },
        {
          "name": "Get Contract",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}"]
            }
          }
        },
        {
          "name": "Update Contract",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"active\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}"]
            }
          }
        },
        {
          "name": "Delete Contract",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}"]
            }
          }
        },
        {
          "name": "Get Contract Versions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}/versions",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}", "versions"]
            }
          }
        },
        {
          "name": "Compare Contract Versions",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"version1\": 1,\n  \"version2\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}/compare",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}", "compare"]
            }
          }
        },
        {
          "name": "Get Contract Comments",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}", "comments"]
            }
          }
        },
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Please review section 3.2 regarding payment terms\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}/comments",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}", "comments"]
            }
          }
        },
        {
          "name": "Approve Contract",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"comments\": \"Approved with minor modifications\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}", "approve"]
            }
          }
        },
        {
          "name": "Reject Contract",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Payment terms need revision\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/contracts/{{contractId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["contracts", "{{contractId}}", "reject"]
            }
          }
        }
      ]
    },
    {
      "name": "Templates",
      "item": [
        {
          "name": "List Templates",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/templates?category=service&isPublic=true",
              "host": ["{{baseUrl}}"],
              "path": ["templates"],
              "query": [
                {
                  "key": "category",
                  "value": "service"
                },
                {
                  "key": "isPublic",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Create Template",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Standard Service Agreement\",\n  \"description\": \"Template for service agreements\",\n  \"category\": \"service\",\n  \"content\": \"This Service Agreement is entered into as of {{date}} between {{client_name}} and {{vendor_name}}...\",\n  \"variables\": [\n    {\n      \"name\": \"date\",\n      \"type\": \"date\",\n      \"required\": true\n    },\n    {\n      \"name\": \"client_name\",\n      \"type\": \"text\",\n      \"required\": true\n    },\n    {\n      \"name\": \"vendor_name\",\n      \"type\": \"text\",\n      \"required\": true\n    }\n  ],\n  \"tags\": [\"service\", \"standard\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/templates",
              "host": ["{{baseUrl}}"],
              "path": ["templates"]
            }
          }
        }
      ]
    },
    {
      "name": "Marketplace",
      "item": [
        {
          "name": "Browse Marketplace",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/marketplace/templates?category=service&minRating=4",
              "host": ["{{baseUrl}}"],
              "path": ["marketplace", "templates"],
              "query": [
                {
                  "key": "category",
                  "value": "service"
                },
                {
                  "key": "minRating",
                  "value": "4"
                }
              ]
            }
          }
        },
        {
          "name": "Purchase Template",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/marketplace/templates/{{templateId}}/purchase",
              "host": ["{{baseUrl}}"],
              "path": ["marketplace", "templates", "{{templateId}}", "purchase"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Smith\",\n  \"department\": \"Legal Department\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Dashboard Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/analytics/dashboard?startDate=2024-01-01&endDate=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "dashboard"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Contract Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/analytics/contracts/{{contractId}}",
              "host": ["{{baseUrl}}"],
              "path": ["analytics", "contracts", "{{contractId}}"]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Global test scripts",
          "pm.test('Response time is less than 500ms', function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(500);",
          "});",
          "",
          "pm.test('Content-Type is application/json', function () {",
          "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
          "});"
        ]
      }
    }
  ]
}